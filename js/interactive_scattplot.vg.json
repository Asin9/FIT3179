{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "title": "University Overall Score vs Students per Staff",
  "data": {
    "url": "https://raw.githubusercontent.com/Asin9/FIT3179-Assignment-2-Global-University-Data-Vis/master/data/top_100.csv_with_continent__fix.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "Europe",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "Europe",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Nostudentperstaff > 0"},
    {"calculate": "datum.Nostudentperstaff", "as": "Population"},
    {"calculate": "datum.Nostudent", "as": "Number of Students"},
    {"calculate": "datum.OverAllScore", "as": "Score"},
    {"calculate": "datum.Name", "as": "University Name"},
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Students per Staff",
      "scale": {"domain": [60,0]}
    },
    "y": {
      "field": "Score",
      "type": "quantitative",
      "title": "Overall Score",
      "scale": {"type": "linear", "base": 10, "domain": [60,100]}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": ["Europe", "North America", "Asia", "Oceania"],
        "range": ["#e41a1c", "#984ea3", "#377eb8", "#a65628"]
      },
      "legend": {"title": "Continent"}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Number of Students",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 20000, 40000, 60000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "University Name", "type": "nominal"},
          {"field": "Score", "type": "quantitative"},
          {"field": "Number of Students", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": -4,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Name'] == 'University of Oxford' || datum['Name'] == 'Stanford University' ||datum['Name'] == 'Tsinghua University'  ||datum['Name'] == 'University of Melbourne'  ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "University Name", "type": "nominal"},
          {"field": "Score", "type": "quantitative"},
          {"field": "Population", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}
