{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 500,
  "width": 500,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/Asin9/FIT3179-Assignment-2-Global-University-Data-Vis/master/data/top_100.csv_with_continent.csv"
  },
    "params": [
    {
      "name": "Population_Above",

      "value": 0,
      "bind": {"input": "range", "min": 1, "max": 100, "step": -1}
    }
  ],
  "selection": {
    "continent_selection": {
      "type": "multi", "fields": ["Rank"], "bind": "legend"
    }
  },
  "transform":[

    {"filter": "datum.Rank > Population_Above"}

  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "No of student per staff",
      "type": "quantitative",
      "title":"Confirmed Cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear",  "domain":[1, 20]}
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "axis": { "tickCount": 6},
      "scale": {"type": "linear", "domain":[100, 1]}
    },
    "fill": {"field": "Continent",  "type": "nominal","scale": {"domain":["North America", "South America", "Europe", "Africa", "Asia", "Oceania"], "range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]}},
    "color": {"field": "Continent", "type": "nominal","scale": {"domain":["North America", "South America", "Europe", "Africa", "Asia", "Oceania"],"range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]}
    },
    "opacity": {
      "condition": {"selection": "continent_selection", "value": 0.8},
      "value": 0.2
    }
}}