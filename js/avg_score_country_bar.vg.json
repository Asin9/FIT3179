{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average University Score (Out of 100)",
    "width": 200,
    "height": 200,
    "data": {
      "url": "https://raw.githubusercontent.com/Asin9/FIT3179-Assignment-2-Global-University-Data-Vis/master/data/Location_Average_Scores_top_100.csv"
    },
      "transform": [
      {
        "window": [
          { "op": "rank", "as": "rank" }
        ],
        "sort": [{ "field": "OverAllScore", "order": "descending" }]
      },
      {
        "filter": "datum.rank <= 30"
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "OverAllScore",
        "type": "quantitative",
        "title": "Average University Score"
      },
      "y": {
        "field": "Location",
        "type": "nominal",
        "title": "Country",
        "sort": "-x"
      }
    }
  }
  